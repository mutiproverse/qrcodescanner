<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_big"
        android:layout_marginTop="@dimen/default_margin_small"
        android:text="@string/fragment_create_qr_code_otp_type_hint"
        android:textColor="@color/edit_text_hint_color"
        android:textSize="@dimen/default_text_size_extra_small" />

    <Spinner
        android:id="@+id/spinner_opt_types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_medium"
        android:layout_marginTop="@dimen/default_margin_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_big"
        android:layout_marginTop="@dimen/default_margin_medium"
        android:text="@string/fragment_create_qr_code_otp_algorithm_hint"
        android:textColor="@color/edit_text_hint_color"
        android:textSize="@dimen/default_text_size_extra_small" />

    <Spinner
        android:id="@+id/spinner_algorithms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_medium"
        android:layout_marginTop="@dimen/default_margin_small" />


    <EditText
        android:id="@+id/edit_text_issuer"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_otp_issuer_hint"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />


    <EditText
        android:id="@+id/edit_text_account"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_otp_account_hint"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />


    <EditText
        android:id="@+id/edit_text_digits"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_otp_digits_hint"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />


    <EditText
        android:id="@+id/edit_text_period"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_otp_period_hint"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />



    <EditText
        android:id="@+id/edit_text_counter"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_otp_counter_hint"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />


    <EditText
        android:id="@+id/edit_text_secret"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_otp_secret_hint"
        android:imeOptions="actionDone"
        android:padding="@dimen/default_text_size_very_small" />

    <Button
        android:id="@+id/button_generate_random_secret"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin_medium"
        android:layout_marginBottom="@dimen/default_margin"
        android:text="@string/fragment_create_qr_code_otp_generate_random_secret" />

</LinearLayout>