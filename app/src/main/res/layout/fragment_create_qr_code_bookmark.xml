<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/default_margin_small"
    android:paddingHorizontal="@dimen/default_margin"
    android:paddingBottom="@dimen/default_margin"
    android:orientation="vertical"
    >


        <EditText
            android:id="@+id/edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:lines="1"
            android:maxLines="1"
            android:hint="@string/fragment_create_qr_code_bookmark_title_hint"
            android:imeOptions="actionNext"
            android:inputType="text"
            style="@style/EditTextAddress"
            android:padding="@dimen/default_text_size_very_small"
            />


        <EditText
            android:id="@+id/edit_text_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:lines="1"
            android:maxLines="1"
            android:hint="@string/barcode_schema_url"
            android:inputType="textUri"
            android:imeOptions="actionDone"
            style="@style/EditTextAddress"
            android:padding="@dimen/default_text_size_very_small"            />
</LinearLayout>
