<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/default_margin_small"
    android:paddingBottom="@dimen/default_margin">


    <EditText
        android:id="@+id/edit_text_first_name"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_contact_first_name_hint"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />


    <EditText
        android:id="@+id/edit_text_last_name"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_contact_last_name_hint"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />


    <EditText
        android:id="@+id/edit_text_organization"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_contact_organization_hint"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />


    <EditText
        android:id="@+id/edit_text_job"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_contact_job_hint"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />


    <EditText
        android:id="@+id/edit_text_email"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_contact_email_hint"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />


    <EditText
        android:id="@+id/edit_text_phone"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="+0123456789"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_contact_phone_hint"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />


    <EditText
        android:id="@+id/edit_text_fax"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="+0123456789"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_contact_fax_hint"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />


    <EditText
        android:id="@+id/edit_text_website"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_contact_website_hint"
        android:imeOptions="actionDone"
        android:inputType="textUri"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />

    <TextView
        style="@style/SettingsGroupTitleTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin_big"
        android:text="@string/fragment_create_barcode_alternative" />

    <TextView
        style="@style/CreateBarcodeFragmentAlternativeTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin_small"
        android:text="@string/fragment_create_qr_code_contact_alternative" />

</LinearLayout>
