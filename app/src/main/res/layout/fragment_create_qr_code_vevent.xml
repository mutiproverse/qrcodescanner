<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/default_margin_small"
    android:paddingBottom="@dimen/default_margin">


    <EditText
        android:id="@+id/edit_text_title"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_event_title_hint"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />



    <EditText
        android:id="@+id/edit_text_organizer"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_event_organizer_hint"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />



    <EditText
        android:id="@+id/edit_text_summary"
        style="@style/EditTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="@string/fragment_create_qr_code_event_summary_hint"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/default_text_size_very_small" />

    <com.redlable.qrcodescanner.feature.common.view.DateTimePickerButton
        android:id="@+id/button_date_time_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_small"
        android:paddingHorizontal="@dimen/default_margin_very_small"
        app:hint="@string/fragment_create_qr_code_event_start_date_hint" />

    <com.redlable.qrcodescanner.feature.common.view.DateTimePickerButton
        android:id="@+id/button_date_time_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_small"
        android:paddingHorizontal="@dimen/default_margin_very_small"
        app:hint="@string/fragment_create_qr_code_event_end_date_hint" />

</LinearLayout>
